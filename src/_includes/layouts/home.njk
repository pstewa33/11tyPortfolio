{% extends "layouts/base.njk" %}

{% set bodyClass = "home" %}

{% block content %}

<section class="home-hero">
  <div class="container grid grid-2">

    <div class="home-title">
        <h1>
            Peyton Stewart - I Design in Code
        </h1>
        <h2>
        UX Engineer focused on building scalable, accessible systems.
        </h2>
    </div>
    <div class="home-profile-img">
        <img src="https://placehold.co/400" alt="profile">
    </div>
  </div>
</section>

<section class="home-work">
  <div class="container">
    <h2>Selected Work</h2>

    <ul class="case-card-grid">
      {% for case in collections.caseStudies %}
        <li>
          <a href="{{ case.url }}" class="case-card-link">
            {% include "patterns/card/case-study-card.njk" %}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>


{% endblock %}
