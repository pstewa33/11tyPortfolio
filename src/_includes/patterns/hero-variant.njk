<section class="hero">
    <div class="hero-inner">
        {% if tags %}
            {% for tag in tags %}
                <span class="tag">{{ tag }}</span>
            {% endfor %}
        {% endif %}
        <h1>{{ title }}</h1>
        {% if subtitle %}
            <p>{{ subtitle }}</p>
        {% endif %}
        <div class="hero-context">
            {% if role%}
                <p><strong>Role:</strong> {{ role }}</p>
            {% endif %}
            {% if timeline %}
                <p><strong>Timeline:</strong> {{ timeline }}</p>
            {% endif %}
            {% if team %}
                <p><strong>Team:</strong> {{ team }}</p>
            {% endif %}
            {% if tools %}
                <p><strong>Tools:</strong> {{ tools }}</p>
            {% endif %}
        </div>
    </div>
</section>