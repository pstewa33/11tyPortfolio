<nav class="navbar">
  <div class="navbar-container">

    <a href="/" class="navbar-logo">
      {{ site.name | default("Logo") }}
    </a>

    <button class="navbar-toggle" aria-label="Toggle navigation">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>

    <ul class="navbar-menu">
      {% for page in collections.navPages %}
        <li>
          <a href="{{ page.url }}" class="{% if page.url == page.url %}active{% endif %}">
            {{ page.data.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>
